{
  "buildCommand": "pnpm turbo build",
  "ignoreCommand": "pnpm dlx turbo-ignore",
  "crons": [
    {
      "path": "/api/cron/1m",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/10m",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/1h",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/12h",
      "schedule": "0 */12 * * *"
    },
    {
      "path": "/api/cron/1d",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/1w",
      "schedule": "0 0 * * 0"
    },
    {
      "path": "/api/cron/1mo",
      "schedule": "0 0 1 * *"
    }
  ]
}
